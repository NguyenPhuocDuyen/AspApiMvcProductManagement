@model IEnumerable<BusinessObject.Member>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="panel">
    <div class="panel-heading">
        <div class="row">
            <div class="col col-sm-3 col-xs-12">
                <h4 class="title">Member <span>List</span></h4>
            </div>
            @*<div class="col-sm-9 col-xs-12 text-right">
                <div class="btn_group">
                    <form asp-controller="Products" asp-action="Index" method="get">
                        <input type="text" name="content" class="form-control" value="@ViewBag.content" placeholder="Search">
                        <button type="submit" class="btn btn-default" title="Reload"><i class="fas fa-search"></i></button>
                    </form>
                </div>
            </div>*@
        </div>
    </div>
    <div class="panel-body table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                    <th>@Html.DisplayNameFor(model => model.City)</th>
                    <th>@Html.DisplayNameFor(model => model.Country)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Email</td>
                        <td>@item.CompanyName</td>
                        <td>@item.City</td>
                        <td>@item.Country</td>
                        <td>
                            <ul class="action-list">
                                <li><a asp-action="Details" asp-route-id="@item.MemberId" data-tip="Detail"><i class="fa fa-solid fa-info"></i></a></li>
                                <li><a asp-action="Edit" asp-route-id="@item.MemberId" data-tip="Edit"><i class="fa fa-edit"></i></a></li>
                                <li><a asp-action="Delete" asp-route-id="@item.MemberId" data-tip="Delete"><i class="fa fa-trash"></i></a></li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>